# LiveKit Configuration
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5174
NETWORK_URL=http://192.168.1.83:5174

# Optional: Set a custom domain for room URLs
# LIVEKIT_DOMAIN=your-custom-domain.livekit.cloud

# Grok API Config For Translations (Autopilot Translator SDK)
# Provider: 'grok' or 'openai' (default: 'grok')
TRANSLATION_API_PROVIDER=grok

# Grok API Key (X.AI) - Required for translations
TRANSLATION_API_KEY=your_grok_api_key_here

# API URL (default: Grok API endpoint)
TRANSLATION_API_URL=https://api.x.ai/v1/chat/completions

# Model name (default: grok-4-1-fast-non-reasoning)
TRANSLATION_MODEL=grok-4-1-fast-non-reasoning

# Default language for translations (used as fallback)
# This matches your multilingual selector options (en, es, es-CO, fr, de, it, pt, ru, zh, ja, ko, ar, hi, tiv)
TRANSLATION_DEFAULT_LANG=es-CO

# Source language (assumed to be English for your app)
TRANSLATION_SOURCE_LANG=en

# Enabled pages for translation (* = all pages, or comma-separated list)
# Empty or * means translation enabled on all pages
# Your multilingual selector works across all pages, so * is appropriate
TRANSLATION_ENABLED_PAGES=*

# Database caching (optional, but recommended for cost savings)
# Set to 'true' to enable SQLite database caching of translations
# This significantly reduces API costs for repeated translations
USE_DATABASE_CACHE=true
